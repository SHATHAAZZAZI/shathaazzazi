<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.food.italy"
    android:background="@drawable/okk">


    <ImageView
        android:layout_width="387dp"
        android:layout_height="179dp"
        android:id="@+id/imageView"
        android:src="@drawable/italyy"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:layout_width="156dp"
        android:layout_height="66dp"
        android:text="pizza"
        android:id="@+id/pizza"
        android:layout_gravity="left|bottom"
        android:onClick="clickButoon"
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="#FFFF505C"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="156dp"
        android:layout_height="66dp"
        android:text="pasta"
        android:id="@+id/pasta"
        android:layout_gravity="left|bottom"
        android:onClick="clickButoon"
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="#ff505c"
        android:layout_below="@+id/pizza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="156dp"
        android:layout_height="66dp"
        android:text="risotto"
        android:id="@+id/risotto"
        android:layout_gravity="left|bottom"
        android:onClick="clickButoon"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#ff505c"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

